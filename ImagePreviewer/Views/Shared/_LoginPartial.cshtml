@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Hi, @User.Identity.GetUserName() <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li style="margin-bottom:4px"><a href="@Url.Action("Logout", "Account")"><i class="fa fa-fw fa-power-off"></i> Выйти</a></li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="@Url.Action("Register", "Account", routeValues: null)"><span class="glyphicon glyphicon-user"></span> Register</a></li>
        <li><a href="@Url.Action("Login", "Account", routeValues: null)"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
    </ul>

}


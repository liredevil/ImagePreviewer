@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-nav ml-auto" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link">Hello, @User.Identity.GetUserName()!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
        </li>
    </ul>

    }
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            @Html.ActionLink("Registration", "Register", "Account", routeValues: null, htmlAttributes: new {@class="nav-link", id = "registerLink" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Sign in", "Login", "Account", routeValues: null, htmlAttributes: new {@class="nav-link", id = "loginLink" })
        </li>
    </ul>
}

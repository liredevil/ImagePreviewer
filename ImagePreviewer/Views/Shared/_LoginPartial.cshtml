@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-nav ml-auto" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav">
        <li class="nav-item">
            @Html.ActionLink("Здравствуйте, " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { @class = "nav-link", title = "Manage" })
        </li>
        <li class="nav-item">
            <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Выйти</a>
        </li>
    </ul>

    }
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            @Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new {@class="nav-link", id = "registerLink" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new {@class="nav-link", id = "loginLink" })
        </li>
    </ul>
}

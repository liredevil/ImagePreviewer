@model ImagePreviewer.Models.ImageModel

@{
    ViewBag.Title = "Upload";
    Layout = null;
}

<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">x</button>
        <h4>ADD IMAGE</h4>
    </div>
    @using (Html.BeginForm("Upload", "Image", FormMethod.Post, new { @class="dropzone", enctype = "multipart/form-data" }))
    {
        <div class="modal-body">
            <div class="row">
                <div class="col-md-6">
                    <img id="imagePreview" alt="" width="350" height="195" />
                    <div class="file_upload">
                        select or drag image
                        <div class="fallback">
                            <input name="file" type="file" multipleaccept="image/x-png,image/jpeg " style="display: inline-block;"
                                             onchange="document.getElementById('imagePreview').src = window.URL.createObjectURL(this.files[0])" />
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Title)
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Description)
                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.TextArea("results", null, new {rows = 5, id = "results", @class= "form-control" })
                        <div id="results "></div>
                        
                    </div>
                    <div class="form-group">
                        <input type="text" name="name" class="form-control" id="getTag" />                            
                    </div>
                    <input type="button" id="addTag" value="addTag" class="btn btn-primary" />
                    @*@Html.Partial("AddTag")*@
                    
                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" value="Publish" class="btn btn-primary" />
            </div>
        </div>
    }
</div>

@*@Scripts.Render("~/Scripts/main2.js")*@



<script type="text/javascript">
    {
        $(document).ready(function () {
            $('#addTag').click(function () {
                var name = $('#getTag').val();
                $('#results').load('@Url.Action("AddTag", "Image")?name=' + name)
            });
        });
    }


</script>



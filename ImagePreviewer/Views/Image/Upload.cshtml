@model ImagePreviewer.Models.ImageModel

@{
    ViewBag.Title = "Upload";
    Layout = null;
}

<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">x</button>
        <h4>ADD IMAGE</h4>
    </div>
    @using (Html.BeginForm("Upload", "Image", FormMethod.Post, new { @class="dropzone", enctype = "multipart/form-data" }))
    {
        <div class="modal-body">
            <div class="row">
                <div class="col-md-6">
                    <img id="imagePreview" alt="" width="350" height="195" />
                    <div class="file_upload">
                        select or drag image
                        <div class="fallback">
                            <input name="file" type="file" multipleaccept="image/x-png,image/jpeg " style="display: inline-block;"
                                             onchange="document.getElementById('imagePreview').src = window.URL.createObjectURL(this.files[0])" />
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.Label("Name your media")
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.Label("Add Description")
                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.Label("Add Tags")
                        <select name="tags" id="addTag" multiple data-role="tagsinput"></select>
                    </div>            
                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" value="Publish" class="btn btn-primary" />
            </div>
        </div>
    }
</div>

@*@Scripts.Render("~/Scripts/main.js")*@

<script type="text/javascript">
    $('#addTag').tagsinput('items')
</script>



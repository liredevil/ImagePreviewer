@model ImagePreviewer.Models.Image

@{
    ViewBag.Title = "Upload";
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <!-- Заголовок модального окна -->
        <div class="modal-header">
            <div class="row">
                <h4 class="modal-title">ADD IMAGE</h4>
            </div>
            <div class="row">
                <h4 class="modal-title">ADD IMAGE</h4>
            </div>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        </div>
        <!-- Основное содержимое модального окна -->
        @using (Html.BeginForm("Upload", "Image", FormMethod.Post, new { @class = "dropzone", enctype = "multipart/form-data", style = "display:contents" }))
        {
            <div class="modal-body"> 
                <div class="row">
                    <div class="col">
                        <img class="img-fluid" id="imagePreview" alt="...">
                        <div class="file_upload">
                            select or drag image
                            <div class="fallback">
                                <input name="file" type="file" multipleaccept="image/x-png,image/jpeg " style="display: inline-block;"
                                       onchange="document.getElementById('imagePreview').src = window.URL.createObjectURL(this.files[0])" />
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Title)
                            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Description)
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Add Tags")
                            <select name="tags" id="addTag" multiple data-role="tagsinput"></select>
                        </div>
                    </div>
                </div>
            </div>
        <!-- Футер модального окна -->
        <div class="modal-footer">
            <input type="submit" value="Publish" class="btn btn-primary" />
        </div>
        }
    </div>
</div>

<script type="text/javascript">
    $('#addTag').tagsinput('items')
</script>